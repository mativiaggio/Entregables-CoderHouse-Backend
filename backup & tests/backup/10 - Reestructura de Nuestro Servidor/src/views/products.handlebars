<link rel="stylesheet" href="./css/products-card.css" />

<div class="container" style="margin-top: 80px;">
  {{#if user}}
    <h1 style="text-align: center;">Bienvenido, {{user.name}}!</h1>
  {{/if}}

  <h1 style="text-align: center;">Productos</h1>
  <ul style="padding-left: 0px;">
    <div class="container">
      <div
        class="row"
        style="display: flex;justify-content: center;align-items: center;"
      >
        {{#each products}}

          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card" style="height: 490px;">
              <div
                class="card-img-top"
                style="max-height: 300px; overflow: hidden;"
              >
                {{#each thumbnails}}
                  <img src="{{this}}" class="img-fluid" alt="{{title}}" />
                {{/each}}
                <span class="wish-icon"><i class="fa fa-heart-o"></i></span>
              </div>
              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <div class="star-rating">
                  <ul class="list-inline">
                    <li class="list-inline-item"><i
                        class="fa-solid fa-star"
                      ></i></li>
                    <li class="list-inline-item"><i
                        class="fa-solid fa-star"
                      ></i></li>
                    <li class="list-inline-item"><i
                        class="fa-solid fa-star"
                      ></i></li>
                    <li class="list-inline-item"><i
                        class="fa-solid fa-star"
                      ></i></li>
                    <li class="list-inline-item"><i
                        class="fa-solid fa-star-half-stroke"
                      ></i></li>
                  </ul>
                </div>
                <p class="card-text">
                  <del>${{price}}</del>
                  <span style="color: #c41431;">
                    {{discountPercentage}}%OFF
                  </span>
                  <br />
                  <strong>${{discountedPrice}}</strong>
                </p>
              </div>
              <div class="card-footer">
                <a
                  href="#"
                  class="btn btn-primary"
                  style="background-color: #c41431; border-color: #c41431;"
                >Agregar al Carrito</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </ul>

  <div style="text-align: center; margin-top: 20px;">
    {{#if hasPrevPage}}
      <a href="{{prevLink}}">Anterior</a>
    {{/if}}

    {{#if hasNextPage}}
      <a href="{{nextLink}}">Siguiente</a>
    {{/if}}
  </div>
</div>